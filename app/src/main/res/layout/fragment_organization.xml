<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_10_20"
    android:paddingEnd="@dimen/dimen_3_6"
    android:paddingLeft="@dimen/dimen_10_20"
    android:paddingRight="@dimen/dimen_3_6"
    android:paddingStart="@dimen/dimen_10_20"
    android:paddingTop="@dimen/dimen_10_20"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/tv_no_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="nodata"
            android:textColor="@color/black"
            android:visibility="gone"/>
    </LinearLayout>


</ScrollView>