<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customviews="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ScrollView
        android:id="@+id/scl_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Image logo -->

            <TextView
                android:fontFamily="@font/gmarketsans_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:gravity="center_horizontal"
                android:text="@string/app_name"
                android:textColor="#333333"
                android:textSize="30sp" />
            
            <androidx.cardview.widget.CardView
                android:layout_marginTop="52dp"
                android:layout_marginHorizontal="24dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <FrameLayout
                    android:id="@+id/frDomain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/login_edt_server"
                        android:paddingLeft="12dp"
                        android:paddingEnd="48dp"
                        android:textColorHint="#BBBBBB"
                        android:textColor="#BBBBBB"
                        android:hint="@string/string_server_site"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="22dp"
                android:layout_marginHorizontal="24dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <FrameLayout
                    android:id="@+id/frID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/login_edt_username"
                        android:paddingLeft="12dp"
                        android:paddingEnd="48dp"
                        android:textColorHint="#BBBBBB"
                        android:textColor="#BBBBBB"
                        android:hint="@string/login_username"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="22dp"
                android:layout_marginHorizontal="24dp"
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <FrameLayout
                    android:id="@+id/frPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <EditText
                        android:id="@+id/login_edt_passsword"
                        android:paddingLeft="12dp"
                        android:paddingEnd="48dp"
                        android:textColorHint="#BBBBBB"
                        android:textColor="#BBBBBB"
                        android:hint="@string/login_password"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:id="@+id/iv"
                        android:padding="14dp"
                        android:layout_gravity="end"
                        android:src="@drawable/eye_defalt_60x60"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"/>
                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnLogin"
                android:textColor="@color/white"
                android:text="@string/login_login"
                android:layout_marginTop="32dp"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/bg_button_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </LinearLayout>

    </ScrollView>

    <include
        layout="@layout/logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />
</RelativeLayout>