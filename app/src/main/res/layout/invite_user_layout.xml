<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llSearch"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white">
        <ImageView
            android:id="@+id/imgBackSearch"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_icon_search"
            android:src="@drawable/nav_back_ic"
            android:tint="@color/colorIcon"
            android:visibility="visible" />

        <LinearLayout
            android:layout_margin="8dp"
            android:background="@drawable/bg_search"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:padding="10dp"
                android:src="@drawable/ic_search"
                android:layout_width="?actionBarSize"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/etSearch"
                android:hint="@string/hint_search_company"
                android:paddingEnd="10dp"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgCloseSearch"
            android:padding="16dp"
            android:src="@drawable/ic_cancel"
            android:layout_width="?actionBarSize"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llToolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_icon_search"
            android:src="@drawable/nav_back_ic"
            android:tint="@color/colorIcon"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvTitle"
            tools:text="Anderson"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="5dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="17sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/toolbar_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:id="@+id/btnGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/circle_bg_ic_group">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_group" />
                </RelativeLayout>


                <ImageView
                    android:id="@+id/ivStatus"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/home_status_01"
                    android:visibility="gone" />
            </LinearLayout>


        </LinearLayout>


        <ImageView
            android:id="@+id/call_menu"
            style="@style/Button"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:padding="@dimen/padding_block"
            android:src="@drawable/ic_call_white"
            android:visibility="gone" />

        <ImageView
            android:layout_marginRight="18dp"
            android:id="@+id/searchView"
            android:paddingVertical="14dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:src="@drawable/ic_find"
            android:showAsAction="collapseActionView|ifRoom"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tvDone"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="@string/done_new"
            android:layout_width="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_height="?attr/actionBarSize" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lnSearch"
        android:layout_marginTop="5dp"
        android:scrollbars="vertical" />
</LinearLayout>
