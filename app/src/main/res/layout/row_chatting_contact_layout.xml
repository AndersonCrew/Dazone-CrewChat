<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_chatting_contact_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/main_attach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lnContact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_contact_name"
                style="@style/textView_chat_text_style"/>


            <TextView
                android:id="@+id/tv_contact_number"
                style="@style/textView_chat_text_style"
                android:autoLink="web|phone"
                android:linksClickable="false" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date_tv"
            style="@style/tv_chat_time_style" />

        <TextView
            android:id="@+id/text_unread"
            style="@style/tv_unread"
            android:layout_marginLeft="@dimen/margin_normal"
            android:textColor="@color/text_unread" />

    </LinearLayout>
</LinearLayout>